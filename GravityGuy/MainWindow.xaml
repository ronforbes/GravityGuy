<Window x:Class="GravityGuy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gravity Guy" Width="800" Height="600" KeyUp="GameCanvas_KeyUp" Loaded="GameCanvas_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <TextBlock x:Name="CoinsCaptured" Grid.Column="0" Grid.Row="0" Foreground="White" Background="CornflowerBlue" FontSize="40"/>
        <Canvas x:Name="GameCanvas" Grid.Column="0" Grid.Row="1" Background="CornflowerBlue" MouseUp="GameCanvas_MouseUp">
            
        </Canvas>
    </Grid>
</Window>
